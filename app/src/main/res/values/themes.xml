<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Theme.Roamio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="Theme.Roamio.MenuTextStyles">
        <item name="fontFamily">@font/urbanist_semibold</item>
    </style>

    <style name="Theme.Roamio.PrimaryButtons">
        <item  name="android:elevation">0dp</item>
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="Theme.Roamio.CicularProfilePhoto">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Roamio.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/gray600</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:background">@drawable/bg_search_bar</item>
        <item name="android:backgroundTint">@color/gray400</item>
    </style>

</resources>